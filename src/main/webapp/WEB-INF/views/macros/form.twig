{% macro input(name, value, type, size) %}
  <input type="{{ type|default('text') }}" name="{{ name }}" value="{{ value|e }}" size="{{ size|default(20) }}" />
{% endmacro %}

{% macro text(name, value, size) %}
    <input type="text" name="{{ name }}" value="{{ value|e }}" size="{{ size|default(20) }}" />
{% endmacro %}

{% macro date(name, value) %}
    <input type="text" name="{{ name }}" value="{{ value |date("yyyy-MM-dd") }}" />
{% endmacro %}

{% macro datetime(name, value) %}
    <input type="text" name="{{ name }}" value="{{ value |date("yyyy-MM-dd HH:mm") }}" />
{% endmacro %}

{% macro time(name, value) %}
    <input type="text" name="{{ name }}" value="{{ value |date("HH:mm") }}"  />
{% endmacro %}

{% macro decimal(name, value, size) %}
    <input type="number" name="{{ name }}" value="{{ value | e }}" size="{{ size|default(10) }}" />
{% endmacro %}

{% macro integer(name, value, size) %}
    <input type="number" name="{{ name }}" value="{{ value | e }}" size="{{ size|default(10) }}" />
{% endmacro %}
